<h2>Inventory</h2>

<div id="album-wrapper">

  <table id="t01">
  <tr>
    <th>Album</th>
    <th> Quantity</th>
    <th> Artist</th>
    <th> Stock Level</th>
    <th> Profit Margin</th>
    <th> Genre</th>
  </tr>
  <% @albums.each do |album| %>
  <tr>
    <td><a href="/albums/<%= album.id %>/show" style="text-decoration:none;"><%= album.name %></a></td>
    <td><%= album.quantity %></td>
    <td><%= Artist.artist_name(album.artist_id) %></td>
    <td><%= album.stock_level() %></td>
    <td><%= album.profit_level() %></td>
    <td><%= Genre.genre_type(album.genre_id) %></td>
  </tr>
<% end %>
</table>

</div>
