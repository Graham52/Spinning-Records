<h2 class="b">Add Album</h2>
<form method="POST" action="/albums">
  <div class="form-wrapper">

    <div class="form-el">
      <label class="abc" for="name">Name:</label>
      <input type="text" name="name" id="name" required autofocus/>
    </div>

    <div class="form-el">
      <label class="abc" for="quantity">Quantity:</label>
      <input type="number" min="0" name="quantity" id="quantity"/>
    </div>

    <div class="form-el">
      <label class="abc" for="artist_select">Select Artist:</label>
      <select name="artist_id" id="artist_select">
        <% @artists.each do |artist| %>
            <option value=<%= artist.id %>><%= artist.name.capitalize %></option>
        <% end %>
      </select>
    </div>

    <div class="form-el">
      <label class="abc" for="buy_price">Buy Price:</label>
      <input type="number" min="0" name="buy_price" id="buy_price"/>
    </div>

    <div class="form-el">
      <label class="abc" for="sell_price">Sell Price:</label>
      <input type="number" min="0" name="sell_price" id="sell_price"/>
    </div>

    <div class="form-el">
      <label class="abc" for="genre_select">Select Genre:</label>
      <select name="genre_id" id="genre_select">
        <% @genres.each do |genre| %>
            <option value=<%= genre.id %>><%= genre.type.capitalize %></option>
        <% end %>
      </select>
    </div>
    <br>

    <div class="form-el">
      <input type="submit" value="Add Album"/>
    </div>

  </div>
</form>
